
@model IEnumerable<leave_management.Models.LeaveTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h4>Leave Types</h4>
<hr />

<table id="tbldata" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DefaultDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    <a asp-action="Edit"
                       class="btn btn-light btn-outline-dark btn-circle btn-sm"
                       data-toggle="tooltip"
                       data-placement="top"
                       title="Edit Leave type details" asp-route-id="@item.Id">
                        <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                    </a>
                    <a asp-action="Details"
                       class="btn btn-light btn-outline-dark btn-circle btn-sm"
                       data-toggle="tooltip"
                       data-placement="top"
                       title="View details" asp-route-id="@item.Id">
                        <i class="fas fa-info" aria-hidden="true"></i>
                    </a>
                    <a asp-action="Delete"
                       class="btn btn-light btn-outline-dark btn-circle btn-sm"
                       data-toggle="tooltip"
                       data-placement="top"
                       title="Delete leave type" asp-route-id="@item.Id" onclick="return confirm('Delete Record?')">
                        <i class="fas fa-trash-alt" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>

<div class="bottom-action">
    <a asp-action="Create" class="btn btn-outline-success">
        <i class="fas fa-plus-circle"></i>
        New Leave Type
    </a>
</div>