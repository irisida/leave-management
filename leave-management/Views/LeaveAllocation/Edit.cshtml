@model leave_management.Models.EditLeaveAllocationViewModel

@{
    ViewData["Title"] = "Edit";
}

<h3>Edit @Model.LeaveType.Name Allocation for <span style="color: crimson">@Model.Employee.Firstname @Model.Employee.Lastname</span></h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label"></label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<hr />

<div>
    <a asp-action="Details"
       asp-route-id="@Model.EmployeeId">
        <i class="fa fa-chevron-circle-left" aria-hidden="true"></i>
        Back to Allocations for @Model.Employee.Firstname @Model.Employee.Lastname
    </a>
</div> 
